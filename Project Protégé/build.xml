<?xml version="1.0"?>
<project name="rs2hd" default="build" basedir=".">
	<property name="src" location="src"/>
	<property name="build" location="bin/"/>
	<property name="lib" location="deps/"/>
	<path id="libs">
		<fileset dir="${lib}" includes="*.jar"/>
	</path>
	<target name="init">
		<tstamp/>
		<mkdir dir="${build}"/>
		<mkdir dir="packages"/>
		<mkdir dir="data/savedgames/"/>
	</target>
	<target name="build" depends="init">
		<javac srcdir="${src}" classpath="${toString:libs}" destdir="${build}"/>
	</target>
	<target name="clean">
		<delete dir="${build}"/>
	</target>
</project>
